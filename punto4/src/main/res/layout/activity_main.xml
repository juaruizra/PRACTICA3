<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkseagreen">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione una figura: "
        android:textSize="25dp"
        android:layout_gravity="center"
        />
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/darkseagreen"
            android:orientation="vertical">
            <Button
                android:id="@+id/boton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Calcular Area"
                android:textSize="15dp"
                android:background="@color/lightgray"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@color/darkseagreen"
            android:layout_weight="3"
            android:orientation="vertical">
            <RadioGroup android:id="@+id/GrbGrupo1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <RadioButton android:id="@+id/RBcuadrado"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuadrado"
                    android:textSize="20dp"
                   />
                <RadioButton android:id="@+id/RBrectangulo"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rectangulo"
                    android:textSize="20dp"
                    />
                <RadioButton android:id="@+id/RBtriangulo"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Triangulo"
                    android:textSize="20dp"
                     />
                <RadioButton android:id="@+id/RBcirculo"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Circulo"
                    android:textSize="20dp"

                    />
            </RadioGroup>
          </LinearLayout>
  </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@color/darkseagreen"
        android:orientation="horizontal"
       >

        <TextView
            android:id="@+id/OUT1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese valor"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/IN1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ingrese Valor"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:inputType="numberDecimal"
            android:layout_gravity="center"
            android:maxLength="8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@color/darkseagreen"
        >
        <TextView
            android:id="@+id/OUT2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese valor"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/IN2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ingrese Valor"

            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:inputType="numberDecimal"
            android:layout_gravity="center"
            android:maxLength="8"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.3"
        android:background="@color/darkseagreen"
        >
        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="45dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>




</LinearLayout>